<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidClient.Resources.UserPage"
             Title="UserPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <!--<Button
    x:Name="CounterBtn"
    Text="Click me" 
    SemanticProperties.Hint="Counts the number of times you click"
    Clicked="LoadDataOnClick"
    HorizontalOptions="Fill" />-->

        <ListView x:Name="ChatsList"  ItemTapped="OnChatItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding OpponentName}"/>
                            <Label Text="{Binding ChatId}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button
    x:Name="CreateChat"
    Text="create chat" 
    SemanticProperties.Hint="Counts the number of times you click"
    Clicked="LoadUsers"
    HorizontalOptions="Fill" />

        <Label x:Name="MessageLabel" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>